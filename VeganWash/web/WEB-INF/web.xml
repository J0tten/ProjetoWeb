<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>CriarUsuarioServlet</servlet-name>
        <servlet-class>br.edu.ufabc.VeganWash.controller.CriarUsuarioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CriarFornecedorServlet</servlet-name>
        <servlet-class>br.edu.ufabc.VeganWash.controller.CriarFornecedorServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginUsuario</servlet-name>
        <servlet-class>br.edu.ufabc.VeganWash.controller.LoginUsuarioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CriarProdutoServlet</servlet-name>
        <servlet-class>br.edu.ufabc.VeganWash.controller.CriarProdutoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>redirectIndex</servlet-name>
        <servlet-class>br.edu.ufabc.VeganWash.controller.redirectIndex</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CriarUsuarioServlet</servlet-name>
        <url-pattern>/newuser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CriarFornecedorServlet</servlet-name>
        <url-pattern>/newfornecedor</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginUsuario</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CriarProdutoServlet</servlet-name>
        <url-pattern>/criarproduto</url-pattern>
    </servlet-mapping>
</web-app>
